			<%= link_to(destroy_user_session_path, method: :delete, class: "login-botton") do%>
			<p>ログアウト　　　</p>
			<% end %>
		<% else %>
			<%= link_to(new_user_registration_path, class: "post-button") do%>
				<p>新規登録　　　</p>
			<% end %>
			<%# ログアウト中はログインにする %>
			<%= link_to(new_user_session_path, class: "login-botton") do%>
